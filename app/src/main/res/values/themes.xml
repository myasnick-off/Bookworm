<resources>
    <!-- Base application theme. -->
    <style name="Theme.Bookworm.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/BookwormButton</item>
        <item name="textInputStyle">@style/BookwormTextInputLayout</item>
        <item name="toolbarStyle">@style/BookwormToolbar</item>
        <item name="textInputOutlinedExposedDropdownMenuStyle">@style/BookwormDropdownMenu</item>
    </style>

    <style name="Theme.Bookworm" parent="Theme.Bookworm.Base">
        <!-- Primary color. -->
        <item name="colorPrimary">@color/color_gray_dark</item>
        <item name="colorPrimaryVariant">@color/color_gray_medium</item>
        <item name="colorOnPrimary">@color/color_gray_light</item>
        <!-- Secondary color. -->
        <item name="colorSecondary">@color/color_yellow_dark</item>
        <item name="colorSecondaryVariant">@color/color_yellow_medium</item>
        <item name="colorOnSecondary">@color/color_yellow_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <item name="textFillColor">@color/white</item>
    </style>

    <style name="BookwormButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_shape</item>
    </style>

    <style name="BookwormTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="startIconTint">?attr/colorSecondary</item>
        <item name="endIconTint">?attr/colorSecondary</item>
        <item name="hintTextColor">?attr/colorSecondary</item>
    </style>

    <style name="BookwormToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/textFillColor</item>
    </style>

    <style name="BookwormDropdownMenu" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="startIconTint">?attr/colorSecondary</item>
        <item name="endIconTint">?attr/colorSecondary</item>
        <item name="hintTextColor">?attr/colorSecondary</item>
    </style>


</resources>