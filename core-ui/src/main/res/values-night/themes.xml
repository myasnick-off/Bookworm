<resources>
    <!-- Base application theme. -->
    <style name="Theme.Bookworm" parent="Theme.Bookworm.Base">
        <!-- Primary color. -->
        <item name="colorOnPrimary">@color/color_gray_light</item>
        <item name="colorPrimaryVariant">@color/color_gray_medium</item>
        <item name="colorPrimary">@color/color_gray_dark</item>
        <!-- Secondary color. -->
        <item name="colorOnSecondary">@color/color_yellow_light</item>
        <item name="colorSecondaryVariant">@color/color_yellow_medium</item>
        <item name="colorSecondary">@color/color_yellow_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <item name="textFillColor">@color/white</item>
        <item name="textOutlineColor">@color/black</item>
    </style>
</resources>